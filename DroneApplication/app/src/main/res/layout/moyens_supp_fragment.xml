<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/select_text_view"
        android:textSize="18sp"
        android:id="@+id/selectTextView"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".5"
        android:gravity="bottom"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/layoutMoyensSupp"
        android:layout_weight=".5">

        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:id="@+id/moyensSpinner"
            android:layout_below="@+id/selectTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:icon="@mipmap/ic_action_new"
            android:id="@+id/add_moyen"
            android:onClick="ajouterMoyen"
            android:src="@mipmap/ic_action_new" />
    </LinearLayout>
</LinearLayout>